{% extends '::base.html.twig' %}

{% block title%} Login {% endblock %}

{% block stylesheets %} 
	
	<style type="text/css">
		#container, html{
			background-color: black;
		}
	</style>

	<link rel="stylesheet" type="text/css" href="{{asset('bundles/eesn2backend/css/login.css')}}">

 {% endblock %}

{% block body %}

	<div id="login">

		<h2><span class="fontawesome-lock"></span>Iniciar Sesión</h2>

		<div id="formLogin" name="loginForm">
			<fieldset>
				<p><label for="user">Nombre de Usuario</label></p>
				<p><input type="text" name="user" id="user"></p>
				<p><label for="password">Contraseña</label></p>
				<p><input type="password" name="pass" id="pass"></p>
				<p><input type="submit" value="Ingresar" id="ingresar"></p>
			</fieldset>

		</div>

	</div>

{% endblock %}

{% block javascripts %}
	
	<script src="{{ asset('bundles/eesn2backend/js/jquery.base64.js') }}" type="text/javascript"></script>
	<script src="{{ asset('bundles/eesn2backend/js/login.js') }}" type="text/javascript"></script>

{% endblock %}